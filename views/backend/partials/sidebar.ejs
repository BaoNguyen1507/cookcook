<%
let action = moduleActive.action;
action = action.replace(/\//g, '-'); //replace '/' by '-';
//console.log(action);
%>
<aside class="left-sidebar">
  <!-- Sidebar scroll-->
  <div class="scroll-sidebar"> 
    <!-- Sidebar navigation-->
    <nav class="sidebar-nav">
      <ul id="sidebarnav">
        <li class="nav-item <%= (action == 'backend-dashboard-index') ? 'active' : '' %>">
          <a class="waves-effect waves-dark" href="/backend/dashboard">
            <i class="icon-speedometer"></i><span class="hide-menu"><%= __('Dashboard') %>
          </a>
        </li>

        <li class="nav-item <%= (action == 'backend-post-list' || action == 'backend-post-form') ? 'active' : '' %>">
          <a class="waves-effect waves-dark" href="/backend/post/list">
            <i class="ti-announcement"></i>
            <span class="hide-menu"><%= __('Danh sách món ăn') %></span>
          </a>
        </li>

        <li class="nav-item <%= (action == 'backend-post-list' || action == 'backend-post-form' || action == 'backend-taxonomy-categories' || action == 'backend-taxonomy-tag') ? 'active' : '' %>">
          <a class="has-arrow waves-effect waves-dark" aria-expanded="false" href="javascript:void(0)">
            <i class="ti-book"></i>
            <span class="hide-menu"><%= __('Phân loại thức ăn') %></span>
            <i class="menu-arrow"></i>
          </a> 
            <ul class="nav flex-column sub-menu">
              <li class="nav-item ">
                <a class="waves-effect waves-dark <%= action %> <%= (action == 'backend-taxonomy-categories') ? 'active' : '' %>"
                  href="/backend/category"><%= __('Khu vực món ăn') %></a>
              </li>
              <li class="nav-item">
                <a class="waves-effect waves-dark <%= action %> <%= (action == 'backend-taxonomy-tag') ? 'active' : '' %>"
                  href="/backend/tag"><%= __('Loại các món ăn') %></a>
              </li>
            </ul> 
        </li>

        <li class="nav-item <%= (action == 'backend-feeItem' || action == 'backend-feeInvoice' || action == 'backend-fee-collectin-setting' || action == 'backend-currency') ? 'active' : '' %>">
          <a class="has-arrow waves-effect waves-dark" aria-expanded="false" href="javascript:void(0)">
            <i class="ti-wallet"></i>
            <span class="hide-menu"><%= __('Danh sách đặt món') %></span>
            <i class="menu-arrow"></i>
          </a> 
            <ul class="nav flex-column sub-menu">
              <li class="nav-item ">
                <a class="waves-effect waves-dark <%= action %> <%= (action == 'backend-feeItem') ? 'active' : '' %>"
                  href="/backend/feeItem"><%= __('Đặt món') %></a>
              </li>
              <li class="nav-item">
                <a class="waves-effect waves-dark <%= action %> <%= (action == 'backend-feeInvoice') ? 'active' : '' %>"
                  href="/backend/feeInvoice"><%= __('Lịch sử đặt món') %></a>
              </li>
            </ul> 
        </li>

        <li class="nav-item <%= (action == 'backend-message') ? 'active' : '' %>">
          <a class="waves-effect waves-dark" href="/backend/message">
            <i class="ti-comments"></i>
            <span class="hide-menu"><%= __('Messenger') %></span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</aside>
